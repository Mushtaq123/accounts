<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:hint="New Amount:"       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText 
        android:id="@+id/new_amount_edittext"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
        android:inputType="number"
        />   
        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/new_radiogroup_registration"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:orientation="horizontal">
	    <RadioButton android:id="@+id/changesgiven"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	        
	        android:text="Given"/>
	    <RadioButton android:id="@+id/changestaken"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"	      
	        android:text="Taken"/>
</RadioGroup>
    <Button
        android:id="@+id/change_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Change amount"
        android:onClick="changeamount"
        android:textStyle="bold"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_gravity="center" />

</LinearLayout>